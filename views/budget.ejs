                <body>
                    <h1>Event Planner</h1>
                    <!-- cards -->    

                    <div class="paper">
                        <h2 class="title">Costs</h2>
                        <div class="pattern">
                          <div id="content" class="content">
                                
                            <ul>
                                <% budget.forEach( el => { %>
                                    <li class='todoItem' data-id='<%=el._id%>'>
                                        <span class='<%= el.completed === true ? 'confirmed' : 'notBudget'%>'>Name:<%= el.name %> 
                                        <br>Cost:<%= el.cost %><br>Notes:<%= el.note %></span>
                                        <br>
                                        <!-- <span class='editBudget fa fa-edit'></span> -->
                                        <span class='delBudget fa fa-trash'></span>
                                    </li>
                        <% }) %>       
                                </ul>
                                   
                            </div>
                          </div>
                          <% sum.forEach( el => { %>
                            <span class="page-bottom">Total Costs: $<%= el.sum_val %> </span>
                                    <% }) %>  
                                <span class="page-bottom fa fa-print"></span> 
                        </div>

                        <!-- A button to open the popup form -->
                    <button class="open-button" onclick="openForm()">Add Cost</button>

                    <div class="form-popup" id="myForm">
                    <form action="/budget/createBudget" method='POST' class="form-container">

                        <input type="text" placeholder="Enter Cost Description" name='name'>
                        <input type="number" placeholder="Enter Cost" name='cost'>
                        <input type="text" placeholder="Enter Notes" name='note'>                        
                    </br>
                        
                    <button type="submit" class="btn">Add Cost</button>
                    <button type="button" class="btn cancel" onclick="closeForm()">Close</button>
                    </form>
                    </div>

