                <!-- Nav list -->
                
                <header>
                    <div class="conainer">
                        <nav>
                            <div class="burger-menu-icon">
                                <div class="line1"></div>
                                <div class="line2"></div>
                                <div class="line3"></div>
                            </div>
                            <ul class="nav-list">
                 
                                <li class="nav-item">
                                    <a href="/logout" class="nav-link">Logout</a>
                                </li>
                                <li class="nav-item">
                                    <a href="/guest" class="nav-link">Guest List</a>
                                </li>
                                <li class="nav-item">
                                    <a href="/todos" class="nav-link">To Do List</a>
                                </li>
                                <li class="nav-item">
                                    <a href="/vendor" class="nav-link">Vendor List</a>
                                </li>
                                <li class="nav-item">
